<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bag1"
    >

    <TextView
        android:id="@+id/signupText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:gravity="center"

        android:text="signup"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:layout_below="@+id/signupText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="142dp"
        app:srcCompat="@drawable/user" />

    <EditText
        android:id="@+id/name"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/nameImage"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="7dp"
        android:layout_toStartOf="@+id/name"
        app:srcCompat="@drawable/name" />

    <EditText
        android:id="@+id/email"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="45dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="83dp"
        android:layout_height="43dp"
        android:layout_below="@+id/nameImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/email"
        app:srcCompat="@drawable/email" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="45dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"

        android:layout_marginTop="34dp"
        android:layout_marginEnd="32dp"
        android:layout_toStartOf="@+id/phone"
        app:srcCompat="@android:drawable/stat_sys_phone_call_forward" />

    <EditText
        android:id="@+id/password"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="45dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="47dp"
        android:layout_height="44dp"
        android:layout_below="@+id/imageButton5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="35dp"
        android:layout_toStartOf="@+id/password"
        app:srcCompat="@drawable/password" />

    <Button
        android:id="@+id/button"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="156dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="137dp"
        android:text="Signup" />


</RelativeLayout>